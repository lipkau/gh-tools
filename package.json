{
  "name": "@lipkau/gh-tools",
  "version": "1.0.0",
  "description": "My collection of custom github actions",
  "private": true,
  "keywords": [
    "actions",
    "github-actions"
  ],
  "homepage": "https://github.com/lipkau/gh-tools#readme",
  "bugs": {
    "url": "https://github.com/lipkau/gh-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lipkau/gh-tools.git"
  },
  "license": "MIT",
  "author": "oliver@lipkau.net",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "_prettier": "prettier --ignore-path \".gitignore\" --check \"*.{ts,json}\"",
    "_eslint": "eslint --ext .ts .",
    "_markdownlint": "markdownlint \"**/*.md\" --ignore node_modules",
    "build": "npm run build --workspaces",
    "lint": "npm run _prettier && npm run _eslint && npm run _markdownlint",
    "format": "npm run _prettier -- --write && npm run _eslint -- --fix && npm run _markdownlint -- --fix",
    "type-check": "tsc --noEmit",
    "test": "npm test --workspaces",
    "audit": "better-npm-audit audit",
    "clean": "rm -rf actions/*/dist actions/*/lib packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@tsconfig/node24": "^24.0.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.3.1",
    "@vercel/ncc": "^0.38.3",
    "better-npm-audit": "^3.11.0",
    "eslint": "^9.35.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "workspaces": [
    "actions/*"
  ]
}
